<?xml version="1.0" encoding="UTF-8" ?>
<schema name="example" version="1.5">
    <uniqueKey>identifier</uniqueKey>
    <fields>
      <field name="identifier" type="keyword" indexed="true" stored="true" required="true" multiValued="false" /> 
      <field name="title" type="text_general" indexed="true" stored="true" required="true" multiValued="false"/>
      <field name="altTitle" type="text_general" indexed="true" stored="true" multiValued="true"/>
      <field name="description" type="text_general" indexed="true" stored="true" multiValued="false"/>
      <field name="lineage" type="text_general" indexed="true" stored="true" multiValued="false"/>
      <field name="organisation" type="text_general" indexed="true" stored="true" multiValued="true"/>
      <field name="individual" type="text_general" indexed="true" stored="true" multiValued="true"/>
      <field name="onlineResourceName" type="text_general" indexed="true" stored="true" multiValued="true"/>
      <field name="onlineResourceDescription" type="text_general" indexed="true" stored="true" multiValued="true"/>
      <field name="resourceIdentifier" type="keyword" indexed="true" stored="true" multiValued="true"/>
      <field name="resourceType" type="keyword" indexed="true" stored="true" multiValued="false"/>
      <field name="licence" type="keyword" indexed="true" stored="true" multiValued="false"/>
      <field name="state" type="keyword" indexed="true" stored="true" required="false" multiValued="false"/>
      <field name="topic" type="keyword" indexed="true" stored="true" required="false" multiValued="true"/>
      <field name="keyword" type="keyword" indexed="true" stored="true" required="false" multiValued="true"/>
      <field name="view" type="keyword" indexed="true" stored="true" required="false" multiValued="true"/>
      <field name="locations" type="spatial" indexed="true" stored="true" required="false" multiValued="true"/>
      <field name="dataCentre" type="keyword" indexed="true" stored="true" required="false" multiValued="false"/>
      <field name="repository" type="keyword" indexed="true" stored="true" required="false" multiValued="true"/>
      <field name="_version_" type="long" indexed="true" stored="true" multiValued="false"/>
      <dynamicField name="random*" type="random" indexed="true" stored="false"/>
    </fields>
    <types>
        <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
        <fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>
        <fieldType name="random" class="solr.RandomSortField"/>
        <fieldType name="keyword" class="solr.TextField" sortMissingLast="true" omitNorms="true">
            <analyzer>
                <tokenizer class="solr.KeywordTokenizerFactory"/>           
            </analyzer>
        </fieldType> 
        <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.EdgeNGramFilterFactory" minGramSize="2" maxGramSize="20" side="front"/>
            </analyzer>
            <analyzer type="query">
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
                <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>
        <fieldType name="spatial"   
            class="solr.SpatialRecursivePrefixTreeFieldType"
            spatialContextFactory="com.spatial4j.core.context.jts.JtsSpatialContextFactory"
            distErrPct="0.025"
            maxDistErr="0.000009"
            units="degrees"
        />
    </types>
</schema>
